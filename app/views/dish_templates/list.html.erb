<h1>
  Favorite Dishes
</h1>

<a href="/new_dish_form">
  Add a new dish
</a>

<hr>

<table>
  <tr>

    <th>
      Name
    </th>

    <th>
      Cuisine
    </th>

    <th>
      Restaurant
    </th>
    
    <th>
      Photo
    </th>
    
    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @dishes.each do |dish| %>
  <tr>

    <td>
      <%= dish.name %>
    </td>

    <td>
      <%= dish.cuisine.name %>
    </td>

    <td>
      <%= dish.restaurant.name %>
    </td>

    <td>
      <img src="<%= dish.photo %>" class="img-responsive" width="60">
    </td>
    
    <td>
      <%= time_ago_in_words(dish.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(dish.updated_at) %> ago
    </td>

    <td>
      <a href="/dishes/<%= dish.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
